{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
        "module": "commonjs",
        "target": "es2017",
        "inlineSourceMap": true,
        "inlineSources": true,
        "noImplicitAny": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ],
        "types": ["node", "koa-mount"]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}